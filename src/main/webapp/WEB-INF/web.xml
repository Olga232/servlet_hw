<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>AuthorizationController</servlet-name>
  	<display-name>AuthorizationController</display-name>
  	<description></description>
  	<servlet-class>ua.itea.controllers.AuthorizationController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UserController</servlet-name>
  	<display-name>UserController</display-name>
  	<description></description>
  	<servlet-class>ua.itea.controllers.UserController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductController</servlet-name>
  	<display-name>ProductController</display-name>
  	<description></description>
  	<servlet-class>ua.itea.controllers.ProductController</servlet-class>
  </servlet>
    <servlet>
  	<servlet-name>MainPageController</servlet-name>
  	<display-name>MainPageController</display-name>
  	<description></description>
  	<servlet-class>ua.itea.controllers.MainPageController</servlet-class>
  </servlet>
  <servlet>
    	<servlet-name>CartController</servlet-name>
    	<display-name>CartController</display-name>
    	<description></description>
    	<servlet-class>ua.itea.controllers.CartController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>OrderController</servlet-name>
  	<display-name>OrderController</display-name>
  	<description></description>
  	<servlet-class>ua.itea.controllers.OrderController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>AuthorizationController</servlet-name>
  	<url-pattern>/authorization</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UserController</servlet-name>
  	<url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductController</servlet-name>
  	<url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>MainPageController</servlet-name>
  	<url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CartController</servlet-name>
  	<url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>OrderController</servlet-name>
  	<url-pattern>/order</url-pattern>
  </servlet-mapping>
  
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/errorPage/error.jsp</location>
  </error-page>
  
</web-app>
